  TIMES 8 db 0
ldt_datacode:                 ; Дескриптор кода для записи
  TIMES 8 db 0
ldt_stack0:                   ; Дескриптор стека 0
  TIMES 8 db 0
ldt_stack1:                   ; Дескриптор стека 1
  TIMES 8 db 0
ldt_stack2:                   ; Дескриптор стека 2
  TIMES 8 db 0
ldt_stack3:                   ; Дескриптор стека 3
  TIMES 8 db 0
ldt_video:                    ; Дескриптор видео
  TIMES 8 db 0
ldt_configarea:               ; Дескриптор области конфигурации процесса
  TIMES 8 db 0
ldt_end: